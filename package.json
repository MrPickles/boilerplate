{
  "name": "boilerplate",
  "version": "0.0.1",
  "description": "Experimental boilerplate code.",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && NODE_ENV=production node index.js",
    "dev": "nodemon index.js --exec babel-node",
    "build": "npm run build:server && npm run build:client",
    "build:server": "webpack --config webpack.config.server.js",
    "build:client": "webpack",
    "watch": "webpack --watch",
    "clean": "rm -rf ./dist/",
    "test": "mocha --compilers js:babel-core/register"
  },
  "author": "Andrew Liu",
  "dependencies": {
    "express": "^4.14.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "json-loader": "^0.5.4",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "webpack": "^1.14.0"
  }
}
